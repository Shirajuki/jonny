---
import Footer from './Footer';
import Navigation from './Navigation';
import ScrollBar from '../components/ScrollBar';
import Lenis from '@studio-freight/lenis';
import { ViewTransitions } from 'astro:transitions';
import Spotlight from '../components/Spotlight';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-primary-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script is:inline src="/lenis.min.js"></script>
    <script is:inline>
      const lenis = new Lenis({
        // duration: 1.125,
        // orientation: 'vertical',
        // smoothWheel: true,
        // wheelMultiplier: 0.65,
        // smoothTouch: false,
        // infinite: false,
      });
      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);
    </script>

    <ViewTransitions />
  </head>
  <body>
    <a
      href="#content"
      onclick="lenis.scrollTo('#content')"
      class="absolute left-0 top-0 block -translate-x-full rounded bg-primary-700 px-4 py-3 text-sm font-bold uppercase tracking-widest text-white transition-transform focus-visible:translate-x-0"
      >Skip to Content</a
    >
    <Spotlight client:only />
    <Navigation client:load />
    <slot />
    <Footer client:visible />
    <ScrollBar client:load />

    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Gochi+Hand&family=Inter:wght@400;500;700&display=swap');
      * {
        box-sizing: border-box;
      }
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
        --fancy-font: 'Gochi Hand', cursive;
      }
      html {
        font-family: 'Inter', sans-serif;
      }
      main {
        margin: auto;
        padding: 1rem;
        width: calc(100% - 2rem);
        max-width: 900px;
        min-height: calc(100vh - 4rem - 4rem);
        line-height: 1.6;
        color: white;
        padding-bottom: 8rem;
        position: relative;
        z-index: 20;
      }
      .fancy-font {
        font-family: var(--fancy-font);
      }
      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
    </style>
  </body>
</html>
